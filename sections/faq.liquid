{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'collapsible-content.css' | asset_url | stylesheet_tag }}
{{ 'section-faq.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{% assign categories = '' %}
<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding ">
    <div class="page-width">
      <h1 class="h0 center">{{ section.settings.heading }}</h1>
    </div>
    <div class="faq__filters">
      {% for faq in shop.metaobjects.faq.values %}
        {% unless categories contains faq.category.value %}
        <button
          id="faq-filter-{{ faq.category.value | handle }}"
          aria-controls="faq-panel--{{ faq.category.value | handle }}"
          aria-expanded="{% if forloop.first %}true{% else %}false{% endif %}"
          type="button"
          class="button button-secondary faq__filter"
          data-value="{{ faq.category.value }}"
        >
          {{ faq.category.value }}
        </button>
        
          {% assign categories = categories | append: faq.category.value | append: ',' %}
        {% endunless %}
      {% endfor %}
    </div>
    {% assign categories = categories | split: ',' %}
    <div class="faq__panels page-width page-width--narrow">
      {% for category in categories %}
        <div
          class="faq__panel"
          id="faq-panel--{{ category | handle }}"
          aria-labelledby="{{ category | handle }}"
          {% unless forloop.first %}
            style="display: none;"
          {% endunless %}
        >
          <h2 class="h2 center">{{ category }}</h2>
          {% assign first = true %}
          {% for faq in shop.metaobjects.faq.values %}
            
            {% if faq.category.value != category %}{% continue %}{% endif %}
            <div
              class="accordion{% if section.settings.layout == 'row' %} content-container color-{{ section.settings.container_color_scheme }} gradient{% endif %}"
              {{ block.shopify_attributes }}
            >
              <details
                id="Details-{{ block.id }}-{{ section.id }}"
                {% if first %}
                  open
                  {% assign first = false %}
                {% endif %}
              >
                <summary id="Summary-{{ block.id }}-{{ section.id }}">
                  <h3 class="accordion__title inline-richtext h4">
                    {{ faq.question.value }}
                  </h3>
                  {% render 'icon-caret' %}
                </summary>
                <div
                  class="accordion__content rte"
                  id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                  role="region"
                  aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                >
                  {{ faq.answer | metafield_tag }}
                </div>
              </details>
            </div>
          {% endfor %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script src="{{ 'faq.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "FAQ",
  "tag": "section",
  "class": "section seciton--faq",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FAQ"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}
