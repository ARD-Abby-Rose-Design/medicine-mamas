<style>
   .section-{{ section.id }}-padding {
     padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
     padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
   }

   @media screen and (min-width: 750px) {
     .section-{{ section.id }}-padding {
       padding-top: {{ section.settings.padding_top }}px;
       padding-bottom: {{ section.settings.padding_bottom }}px;
     }
   }
  .featured-products-stacked {
     display: flex;
    flex-direction: column;
     justify-content: center;
        align-items: center;
     gap: 8rem;
  }

  .featured-products-stacked__card {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    justify-content: center;
    align-items: center;
    width: calc(100%);
    background-color: {{ section.settings.background_color }};
  }

 .featured-products-stacked__image {
  height: 280px;
  width: 100%;
  overflow: hidden;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.featured-products-stacked__image img {
  width: 100%;
  height: auto;
  object-fit: contain;
}

  .featured-products-stacked__card-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 1.6rem;
    width: 100%;
  }

  .featured-products-stacked .product__title--with-price {
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: start;
  gap: 1rem;
}

.featured-products-stacked .product__title-title {
  grid-column: 1;
  text-transform: none;
}

.featured-products-stacked .product__title-price {
  grid-column: 2;
  text-align: right;
  align-self: center;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.featured-products-stacked .product__title-price s {
  color: #7E7C78;
}

.featured-products-stacked .product__title h1 {
  text-transform: none;
}

    @media screen and (min-width: 749px) {
          .featured-products-stacked__card {

    width: calc(100%/{{ section.blocks.size }} - 8rem);
  }

    }
</style>

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <div class="featured-products-stacked page-width">
    {%- for block in section.blocks -%}
        
    <div class="featured-products-stacked__card">
      {%- assign product = block.settings.product -%}
      {%- if product != blank -%}
        {% assign image = product.featured_image %}
        {%- if block.settings.image != blank -%}
            {%- assign image = block.settings.image -%}
        {%- endif -%}
      
            <a href="{{ product.url | within: product }}" class="featured-products-stacked__image">
               {{ image |  image_url: width: 3200 | image_tag }}
            </a>
        <div class="featured-products-stacked__card-content">
        <div
          class="product__title product__title--with-price"
          {{ block.shopify_attributes }}
        >
          <h1 class="product__title-title h3">{{ product.title | escape }}</h1>
            <div class="product__title-price">
              <div class="h3">
                {{ product.selected_or_first_available_variant.price | money_without_trailing_zeros }}
              </div>
              {% if product.selected_or_first_available_variant.compare_at_price != blank
                and product.selected_or_first_available_variant.price
                  < product.selected_or_first_available_variant.compare_at_price
              %}
                <div class="h3">
                  <s>
                    {{- product.selected_or_first_available_variant.compare_at_price | money_without_trailing_zeros -}}
                  </s>
                </div>
              {% endif %}
            </div>
        </div>
        {% if block.settings.button_label != blank %}
          {%- assign product_form_id = 'product-form-' | append: block.id -%}
          {%- render 'buy-buttons',
            block: block,
            product: block.settings.product,
            product_form_id: product_form_id,
            section_id: section.id,
            show_pickup_availability: true
          -%}
        {% endif %}
        </div>
      {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Featured products stacked",
  "settings": [
    {
        "type": "color",
        "id": "background_color",
        "label": "Cards background color",
        "default": "#ffffff"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 140,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],

  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
          "type": "inline_richtext",
          "id": "product_benefits",
          "label": "Product benefits"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label"
        },
        {
          "type": "checkbox",
          "id": "show_price",
          "label": "Show price in button",
          "default": false
        },
        {
          "type": "select",
          "id": "button_style",
          "default": "default",
          "label": "Button style",
          "options": [
            {
              "value": "default",
              "label": "Default"
            },
            {
              "value": "red",
              "label": "Red"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured products stacked"
    }
  ]
}
{% endschema %}
