{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .experts-slider__header {
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
    text-align: center;
    margin-bottom: 4rem;
  }

  .experts-slider .slider {
    column-gap: 1.5rem;
    align-items: center;
    width: 100%;
    margin: 2.4rem auto;
  }


  .experts-slider__card {
    display: flex;
    flex-direction: column;
    gap: 2.6rem;
    justify-content: center;
    align-items: center;
    width: 100%;
    overflow: hidden !important;
    position: relative;
  }


  .experts-slider__card img,
  .experts-slider__card video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

    .experts-slider__card-footer {
      display: flex;
      flex-direction: column;
      gap: 1.4rem;
      text-align: center;
    }


  @media screen and (max-width: 749px) {
    .experts-slider .slider__slide {
      width: calc(100% - 10rem);
    }

  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .experts-slider .slider {
      column-gap: 2rem;
    }


  }
  @media screen and (min-width: 990px) {
    .experts-slider .slider {
      column-gap: 3rem;
      justify-content: center;
    }

    .experts-slider .slider__slide {

      max-width: 310px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  {% if section.settings.heading != blank %}
    <div class="experts-slider__header page-width">
      <div class="{{ section.settings.heading_size }}">
        {{ section.settings.heading }}
      </div>
      <div class="{{ section.settings.subheading_size }}">
        {{ section.settings.subheading }}
      </div>
    </div>
  {% endif %}
  <slider-component class="experts-slider slider-mobile-gutter ">
    <ul
      id="Slider-{{ section.id }}"
      class="grid slider slider--mobile slider--tablet grid--1-col grid--2-col-tablet grid--4-col-desktop grid--peek"
      role="list"
      aria-label="Experts slider"
    >
      {% for block in section.blocks %}
        <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="slider__slide grid__item">
          <div class="experts-slider__card">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy' }}
            {% elsif block.settings.video != blank %}
              {% assign thumbnail = block.settings.video.preview_image | image_url: width: 300 %}
              {{
                block.settings.video
                | video_tag: autoplay: false, controls: false, muted: false, loading: 'lazy', poster: thumbnail
              }}
              <div class="custom-play-button">
                {% render 'icon-play' %}
              </div>
            {% endif %}
            <div class="experts-slider__card-footer">
                <div class="experts-slider__expert-name">
                    {{ block.settings.expert_name }}
                </div>
                <div class="experts-slider__media-title">
                    {{ block.settings.media_title }}
                </div>
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>

    <div class="slider-buttons visually-hidden">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="Previous slide"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{ 'icon-caret.svg' | inline_asset_content }}
        </span>
      </button>
      <div class="slider-counter caption">
        <span class="slider-counter--current"></span>
        <span aria-hidden="true"> / </span>
        <span class="visually-hidden">of</span>
        <span class="slider-counter--total"></span>
      </div>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="Next slide"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{ 'icon-caret.svg' | inline_asset_content }}
        </span>
      </button>
    </div>
  </slider-component>
</div>

