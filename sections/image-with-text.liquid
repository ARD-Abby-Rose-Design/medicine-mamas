{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{% liquid
  assign media_caption = section.settings.media_caption | strip
  assign second_media_caption = section.settings.second_media_caption | strip

  if media_caption contains 'image:elle'
    assign media_caption = media_caption | split: 'image:elle' | first | strip
  endif

  if second_media_caption contains 'image:elle'
    assign second_media_caption = second_media_caption | split: 'image:elle' | first | strip
  endif
%}

{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }

    #ImageWithText--{{ section.id }} .media-caption--none,
    #ImageWithText--{{ section.id }} .media-caption--solid,
    #ImageWithText--{{ section.id }} .media-caption--review,
    {
      color: {{ section.settings.media_caption_color }};
    }

    #ImageWithText--{{ section.id }} .media-caption--none.second-media-caption,
    #ImageWithText--{{ section.id }} .media-caption--solid.second-media-caption,
    #ImageWithText--{{ section.id }} .media-caption--review.second-media-caption,
    {
      color: {{ section.settings.second_media_caption_color }};
    }

    #ImageWithText--{{ section.id }} .media-caption--solid {
        background-color: {{ section.settings.media_caption_bg_color }};
        padding: 0.4rem 0.6rem;
        border-radius: 0.8rem;
        opacity: 0.7;
    }

    #ImageWithText--{{ section.id }} .media-caption--solid.second-media-caption {
        background-color: {{ section.settings.second_media_caption_bg_color }};
    }


    #ImageWithText--{{ section.id }} .media-caption--review {
      background-color: {{ section.settings.media_caption_bg_color }};
    }

    #ImageWithText--{{ section.id }} .media-caption--review.second-media-caption {
      background-color: {{ section.settings.second.media_caption_bg_color }};

    }


    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }

      #ImageWithText--{{ section.id }} .image-with-text__content {
      padding-left: calc({{ section.settings.desktop_content_padding_left }} * 0.8)px !important;
      padding-right: calc({{ section.settings.desktop_content_padding_left }} * 0.8)px !important;
      }
  }

  @media screen and (min-width: 980px) {
    #ImageWithText--{{ section.id }} .image-with-text__content {
      padding-left: {{ section.settings.desktop_content_padding_left }}px !important;
      padding-right: {{ section.settings.desktop_content_padding_right }}px !important;
      }
  }
      {% if section.settings.full_width %}
    @media screen and (max-width: 749px) {

              #ImageWithText--{{ section.id }}.mobile-full-width {
                max-width: none;
                padding: 0;
                      }

              #ImageWithText--{{ section.id }}.mobile-full-width .image-with-text__text-item {
                max-width: var(--page-width);
                padding: 0 1.5rem;
              }
    }
        {% endif %}
{%- endstyle -%}

{% assign scheme1 = settings.color_schemes | first %}
<div class="color-{{ section.settings.color_scheme }}">
  <div
    id="ImageWithText--{{ section.id }}"
    class="
      image-with-text
      color-{{ section.settings.color_scheme }}
      image-with-text--{{ section.settings.content_layout }}
      page-width
      isolate
      {% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %}
        collapse-borders
      {% endif %}
      {% unless section.settings.color_scheme == scheme1 and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %}
        collapse-corners
      {% endunless %}
      section-{{ section.id }}-padding
      {% if settings.animations_reveal_on_scroll and section.settings.below_header == false %}
        scroll-trigger animate--slide-in
      {% endif %}
      {% if section.settings.show_mobile == false %}
        medium-hide small-hide
      {% endif %}
      {% if section.settings.show_desktop == false %}
        medium-up-hide large-up-hide hide-desktop
      {% endif %}
      {% if section.settings.full_width %}
        mobile-full-width
      {% endif %}
      {% if section.settings.below_header %}
        section-below-header
      {% endif %}
    "
  >
    <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %} {% if section.settings.layout_mobile == 'text_first' %} image-with-text__grid--reverse-mobile{% endif %} ">
      <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
        {% if media_caption != blank and section.settings.media_caption_bg == 'below' %}
          <div class="media-caption--{{ section.settings.media_caption_bg }} rte medium-up-hide">
            {{ section.settings.media_caption }}
          </div>
        {% endif %}
        <div
          class="image-with-text__media image-with-text__media--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} global-media-settings {% if section.settings.image != blank or section.settings.video != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
          {% if section.settings.height == 'adapt'
            and section.settings.image != blank
            and section.settings.media_type == 'image'
          %}
            style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
          {% endif %}
          {% if section.settings.height == 'adapt'
            and section.settings.video != blank
            and section.settings.media_type == 'video'
          %}
            style="padding-bottom: {{ 1 | divided_by: section.settings.video.aspect_ratio | times: 100 }}%;"
          {% endif %}
        >
          {%- if section.settings.image != blank or section.settings.video != blank -%}
            {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
              {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
              {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
              (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
            {%- endcapture -%}
            {%- else -%}
              {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
              {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
            {%- endif -%}
            {% case section.settings.media_type %}
              {% when 'image' %}
                {% if media_caption != blank and section.settings.media_caption_bg != 'below' %}
                  <div class="media-caption media-caption--{{ section.settings.media_caption_position }} media-caption-mobile--{{ section.settings.media_caption_position_mobile }} media-caption--{{ section.settings.media_caption_bg }}">
                    {{ media_caption }}
                    {% if section.settings.media_caption contains 'image:elle' %}{% render 'icon-elle' %}{% endif %}
                  </div>
                {% endif %}
                {% if section.settings.second_media_caption != blank
                  and section.settings.second_media_caption_bg != 'below'
                %}
                  <div class="media-caption media-caption--{{ section.settings.second_media_caption_position }} second-media-caption media-caption-mobile--{{ section.settings.second_media_caption_position_mobile }} media-caption--{{ section.settings.second_media_caption_bg }}">
                    {{ second_media_caption }}
                    {% if section.settings.second_media_caption contains 'image:elle' -%}
                      {%- render 'icon-elle' -%}
                    {%- endif %}
                  </div>
                {% endif %}
                {{
                  section.settings.image
                  | image_url: width: 1500
                  | image_tag: loading: 'lazy', sizes: sizes, widths: widths
                }}
              {% when 'video' %}
                {% if media_caption != blank and section.settings.media_caption_bg != 'below' %}
                  <div class="media-caption media-caption--{{ section.settings.media_caption_position }} media-caption-mobile--{{ section.settings.media_caption_position_mobile }} media-caption--{{ section.settings.media_caption_bg }}">
                    {{ media_caption -}}
                    {%- if section.settings.media_caption contains 'image:elle' %}{% render 'icon-elle' %}{% endif %}
                  </div>
                {% endif %}
                {% if section.settings.second_media_caption != blank
                  and section.settings.second_media_caption_bg != 'below'
                %}
                  <div class="media-caption media-caption--{{ section.settings.second_media_caption_position }} second-media-caption media-caption-mobile--{{ section.settings.second_media_caption_position_mobile }} media-caption--{{ section.settings.second_media_caption_bg }}">
                    {{ second_media_caption -}}
                    {%- if section.settings.second_media_caption contains 'image:elle' -%}
                      {%- render 'icon-elle' -%}
                    {%- endif %}
                  </div>
                {% endif %}
                {% if section.settings.video_autoplay == 'autoplay' %}
                  {{
                    section.settings.video
                    | video_tag:
                      image_size: '1500x',
                      loop: true,
                      controls: false,
                      muted: true,
                      autoplay: true,
                      playsinline: true
                  }}
                {% else %}
                  {{
                    section.settings.video
                    | video_tag:
                      image_size: '1500x',
                      loop: true,
                      controls: false,
                      muted: false,
                      autoplay: false,
                      playsinline: true
                  }}
                  <div class="custom-play-button">
                    {% render 'icon-play' %}
                  </div>
                {% endif %}
            {% endcase %}
          {%- else -%}
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
        {% if media_caption != blank and section.settings.media_caption_bg == 'below' %}
          <div class="media-caption media-caption--{{ section.settings.media_caption_bg }} rte small-hide">
            {{ section.settings.media_caption }}
          </div>
        {% endif %}
      </div>
      <div class="image-with-text__text-item grid__item">
        <div
          class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} content-container"
        >
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'heading' -%}
                <h2
                  class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.heading | replace: 'Body,', 'Body,<br>' }}
                </h2>
              {%- when 'heading_with_line_breaks' -%}
                <h2
                  class="image-with-text__heading heading-with-line-breaks inline-richtext {{ block.settings.heading_with_line_breaks_size }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.heading_with_line_breaks }}
                </h2>
              {%- when 'caption' -%}
                <p
                  class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.caption | escape }}
                </p>

              {%- when 'text' -%}
                <style>
                  #image-with-text__text--{{ block.id }} {
                    {% if block.settings.background_style == 'solid' %}
                      background-color: {{ block.settings.background_color }};
                      padding: 1.6rem 2.4rem;
                      border-radius: 0.8rem;
                    {% endif %}
                  }
                </style>
                <div
                  id="image-with-text__text--{{ block.id }}"
                  class="image-with-text__text rte {{ block.settings.text_style }} {{ block.settings.text_size }}"
                  {{ block.shopify_attributes }}
                >
                  {% capture signature %}
                <img src="{{ 'Signature.png' | file_url }}" width="260" height="51" />
                {% endcapture %}
                  {{ block.settings.text | replace: '[signature]', signature }}
                </div>
                {% if block.settings.bullets_to_checkmarks %}
                  <style>
                    .section-{{ section.id }}-padding ul {
                      list-style-type: none;
                    }
                    .section-{{ section.id }}-padding li:before {
                      content: '';
                      display: inline-block;
                      width: 15px;
                      height: 15px;
                      top: 2px;
                      position: relative;
                      margin-right: 5px;
                      background-image: url("data:image/svg+xml,%3Csvg width='20' height='21' viewBox='0 0 20 21' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M18.125 2.16666C15.8024 2.89044 13.5444 4.79058 11.6098 7.69364C9.92261 10.2658 8.68468 13.1316 7.95372 16.1576C7.33893 15.183 6.53586 14.3545 5.59643 13.7256C4.65701 13.0968 3.60213 12.6816 2.5 12.5068V14.5326C3.56031 14.7544 4.54436 15.2705 5.34942 16.027C6.15449 16.7835 6.75103 17.7527 7.07679 18.8333H9.38992C10.0766 13.4798 13.6167 6.11052 18.125 4.26421V2.16666Z' fill='black'/%3E%3C/svg%3E%0A");
                      background-size: contain;
                    }
                  </style>
                {% endif %}
              {%- when 'button' -%}
                {%- if block.settings.button_label != blank -%}
                  <div class="image-with-text__button">
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                      {% endif %}
                      class="button{% if block.settings.button_arrow %} button--arrow{% endif %} {% if block.settings.big_button %}button--big{% endif %}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                    {% if block.settings.button_subtitle != blank %}
                      <div class="center" style="font-size: 1.2rem; margin-top: 0.6rem;">
                        {{ block.settings.button_subtitle }}
                      </div>
                    {% endif %}
                  </div>
                {%- endif -%}
              {%- when 'results' -%}
                <style>
                  #image-with-text__results--{{ block.id }} {
                    {% if block.settings.show_mobile %}
                      display: flex;
                    {% else %}
                      display: none;
                    {% endif %}
                  }
                  @media screen and (min-width: 750px) {
                    #image-with-text__results--{{ block.id }} {
                      {% if block.settings.show_desktop %}
                        display: flex;
                      {% else %}
                        display: none;
                      {% endif %}
                    }
                  }
                </style>
                {% if block.settings.result_number1 != blank %}
                  <div id="image-with-text__results--{{ block.id }}" class="image-with-text__results">
                    <div class="image-with-text__result">
                      <h2 class="image-with-text__result-number h1">{{ block.settings.result_number1 }}</h2>
                      <p>{{ block.settings.result_text1 }}</p>
                    </div>
                    <div class="image-with-text__result">
                      <h2 class="image-with-text__result-number h1">{{ block.settings.result_number2 }}</h2>
                      <p>{{ block.settings.result_text2 }}</p>
                    </div>
                    <div class="image-with-text__result">
                      <h2 class="image-with-text__result-number h1">{{ block.settings.result_number3 }}</h2>
                      <p>{{ block.settings.result_text3 }}</p>
                    </div>
                  </div>
                {% endif %}
              {%- when 'review' -%}
                <div id="image-with-text__review--{{ block.id }}" class="image-with-text__review">
                  <style>
                    #image-with-text__review--{{ block.id }} {
                      {% if block.settings.show_mobile %}
                        display: flex;
                      {% else %}
                        display: none;
                      {% endif %}
                    }
                    @media screen and (min-width: 750px) {
                      #image-with-text__review--{{ block.id }} {
                        {% if block.settings.show_desktop %}
                          display: flex;
                        {% else %}
                          display: none;
                        {% endif %}
                      }
                    }
                  </style>
                  <div class="image-with-text__review-header">
                    <div class="image-with-text__review-stars">★★★★★</div>
                    <h4>{{ block.settings.review_product }}</h4>
                    <div class="image-with-text-verified h5">✓ VERIFIED REVIEW</div>
                  </div>
                  <div class="h5">
                    <strong>{{ block.settings.review_name }}</strong>
                  </div>
                  <div class="h5">
                    <strong>{{ block.settings.review_title }}</strong>
                  </div>
                  <p>{{ block.settings.review_text }}</p>
                </div>
              {%- when 'number' -%}
                <div id="image-with-text__number--{{ block.id }}" class="image-with-text__number">
                  <style>
                      #image-with-text__number--{{ block.id }} {
                        {% if block.settings.show_mobile %}
                          display: flex;
                        {% else %}
                          display: none;
                        {% endif %}
                      }

                      #image-with-text__number--{{ block.id }} {
                      color: white;
                      background-color: {{ block.settings.number_bg_color }};
                      font-size: 2.6rem;
                      font-weight: 700;
                      width: 3.2rem;
                      height: 3.2rem;
                      display: flex;
                      align-items: center;
                      justify-content: center;
                      border-radius: 50% !important;
                    }

                      @media screen and (min-width: 750px) {
                        #image-with-text__number--{{ block.id }} {
                          {% if block.settings.show_desktop %}
                            display: flex;
                          {% else %}
                            display: none;
                          {% endif %}
                        }
                      }
                  </style>
                  <div>{{ block.settings.number }}</div>
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  function customPlayVideos() {
    const videoWrappers = document.querySelectorAll('#ImageWithText--{{ section.id }} .image-with-text__media');

    videoWrappers.forEach(function (wrapper) {
      const video = wrapper.querySelector('video');
      const button = wrapper.querySelector('.custom-play-button');

      if (video && button) {
        button.addEventListener('click', function (event) {
          video.play();
        });

        video.addEventListener('play', function () {
          button.style.display = 'none';
        });

        video.addEventListener('pause', function () {
          button.style.display = 'block';
        });

        video.addEventListener('click', function () {
          if (video.paused) {
            video.play();
          } else {
            video.pause();
          }
        });
      }
    });
  }
  document.addEventListener('DOMContentLoaded', customPlayVideos);
</script>

