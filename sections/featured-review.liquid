{% style %}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .featured-review {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .featured-review .image-with-text__review {
    max-width: 288px;
    gap: 0.8rem;
  }


  #image-with-text__review-{{ section.id }} {
      {% if section.settings.show_desktop %}
          display: flex;
      {% else %}
          display: none;
      {% endif %}
  }
  @media screen and (max-width: 749px) {
      #image-with-text__review-{{ section.id }} {
          {% if section.settings.show_mobile %}
              display: flex;
          {% else %}
              display: none;
          {% endif %}
      }
  }
{% endstyle %}

<div class="featured-review page-width section-{{ section.id }}-padding">
  <div id="image-with-text__review-{{ section.id }}" class="image-with-text__review">
    <div class="image-with-text__review-stars">★★★★★</div>
    <h4>{{ section.settings.review_product }}</h4>
    <div>✓ VERIFIED REVIEW</div>
    <h5>{{ section.settings.review_name }}</h5>
    <h5>{{ section.settings.review_title }}</h5>
    <p>{{ section.settings.review_text }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Featured Review",
  "settings": [
    {
      "type": "text",
      "id": "review_product",
      "label": "Product Name"
    },
    {
      "type": "text",
      "id": "review_name",
      "label": "Reviewer Name"
    },
    {
      "type": "text",
      "id": "review_title",
      "label": "Reviewer Title"
    },
    {
      "type": "richtext",
      "id": "review_text",
      "label": "Review Text"
    },
    {
      "type": "checkbox",
      "id": "show_desktop",
      "label": "Show on Desktop",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_mobile",
      "label": "Show on Mobile",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Featured Review",
      "category": "Custom"
    }
  ]
}
{% endschema %}
