{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{{ 'collection-secondary-menu.css' | asset_url | stylesheet_tag }}
<div class="section-{{ section.id }}-padding{% if section.settings.secondary_background %} isolate{% endif %} page-width small-full-width">
  <div class="collection-secondary-menu">
    <ul class="list-unstyled">
      {% if section.settings.menu != nil and section.settings.menu.links != nil %}
        {% for link in section.settings.menu.links %}
          <li class="collection-secondary-menu__item{% if link.active %} active{% endif %}">
            <a href="{{ link.url }}" class="collection-secondary-menu__link">{{ link.title }}</a>
          </li>
        {% endfor %}
      {% endif %}
      {%- for block in section.blocks -%}
        <li class="collection-secondary-menu__item{% if link.active %} active{% endif %}">
          <a href="{{ block.settings.url }}" class="collection-secondary-menu__link">{{ block.settinsg.title }}</a>
        </li>
      {%- endfor -%}
    </li>
  </div>
</div>

{% schema %}
{
  "name": "Collection secondary menu",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu to use"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Link title"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection secondary menu"
    }
  ]
}
{% endschema %}
