{{ 'section-product-ingredients.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="product-ingredients">
      <div class="product-ingredients__image">
        {% if product.metafields.custom.ingredients != blank %}
          {% for ingredient in product.metafields.custom.ingredients.value limit: 1 %}
            <div class="media" style="padding-top: 100%;">
            {{ ingredient.image | image_url: width: 800, height: 800, crop: 'center' | image_tag }}
            </div>
          {% endfor %}
        {% endif %}
      </div>
      <div class="product-ingredients__content">
        <h2 class="page-title {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.heading }}
        </h2>

        {% if product.metafields.custom.ingredients != blank %}
          <div class="product__ingredients-list">
            {% for ingredient in product.metafields.custom.ingredients.value %}  
              <div
                class="accordion{% if section.settings.layout == 'row' %} content-container color-{{ section.settings.container_color_scheme }} gradient{% endif %}"
                {{ block.shopify_attributes }}
              >
                <details
                  id="Details-{{ block.id }}-{{ section.id }}"
                >
                  <summary id="Summary-{{ block.id }}-{{ section.id }}">
                    <h3 class="accordion__title inline-richtext h5">
                      {{ ingredient.title }}
                    </h3>
                    {% render 'icon-caret' %}
                  </summary>
                  <div
                    class="accordion__content rte"
                    id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}"
                    role="region"
                    aria-labelledby="Summary-{{ block.id }}-{{ section.id }}"
                  >
                    {{ ingredient.description | metafield_tag }}
                  </div>
                </details>
              </div>
            {% endfor %}
          </div>
          {% comment %}
          <a href="/pages/ingredients" class="product__ingredients-all-link h5">
            <span>
            All ingredients
            </span>
            {% render 'icon-arrow' %}
          </a>
          {% endcomment %}
          {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product ingredients",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.all.heading.label",
      "default": "t:sections.all.heading.default"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Product ingredients"
    }
  ]
}
{% endschema %}
