{%- liquid
  assign image_block = section.blocks | where: "type", "image" | first

  assign text_blocks = section.blocks | where: "type", "text"

  assign offer_block = section.blocks | where: "type", "offer" | first

  assign section_top = section.settings.section_top

  assign section_bottom = section.settings.section_bottom

  assign section_top_mobile = section.settings.section_top_mobile

  assign section_bottom_mobile = section.settings.section_bottom_mobile
-%}

<style>
  .landing-hero-grid {
    display: grid;
    row-gap: var(--s2);
  }

  .landing-hero-image {
    max-width: 422px;
    margin-right: auto;
    margin-left: auto;
  }

  @media (min-width: 961px) {
    .landing-hero-grid {
      display: grid;
      grid-template-columns: 1.4fr 1fr;
      align-items: center;
      column-gap: var(--s1);
    }

    .landing-hero-image {
      max-width: none;
    }
  }
</style>

<div class="landing-container top-{{ section_top }} small--top-{{ section_top_mobile }} bottom-{{ section_bottom }} small--bottom-{{ section_bottom_mobile }}">
  <div class="landing-hero-grid">
    <div class="stack text--center">
      {%- render "landing-amazon-exclusive" -%}

      {%- for block in text_blocks -%}
        {%- render "landing-text" block: block -%}
      {%- endfor -%}

      {%- if offer_block -%}
        <div class="stack-item-2">
          {%- render "landing-offer" block: offer_block -%}
        </div>
      {%- endif -%}
    </div>
    <div>
      <div class="landing-hero-image">
        {%- render "landing-image" block: image_block -%}
      </div>
    </div>
  </div>
</div>

