<style>
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .featured-products-stacked__header {
    text-align: center;
    margin: 0 auto;
  }

  .featured-products-stacked {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2.4rem;
    margin-top: 4rem;
  }

   @media screen and (min-width: 749px) {
    .featured-products-stacked {
      flex-direction: row;
      flex-wrap: wrap;
      align-items: flex-start;
    }
    }

  .featured-products-stacked h3,
  .featured-products-stacked h4 {
    margin: 0;
  }


  .featured-products-stacked__card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: calc(100%);
    background-color: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 749px) {
    .featured-products-stacked__card {

      width: calc(100%/{{ section.blocks.size }} - 8rem);
    }

  }

  .featured-products-stacked__image {
    height: 280px;
    width: 100%;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .featured-products-stacked__image img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .featured-products-stacked__card-content {
    display: flex;
    flex-direction: column;
    gap: 1.4rem;
    border: 1px solid #E9E4DE;
    padding: 1.6rem;
    width: 100%;
  }

  .featured-products-stacked .product__title--with-price {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    align-items: start;
    gap: 1rem;
    margin: 0;
  }

  .featured-products-stacked .product__title-title {
    grid-column: span 9;
    text-transform: none;
  }

  .featured-products-stacked .product__title-price {
    grid-column: span 3;
    text-align: right;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .featured-products-stacked .product__title-price .h4 {
    font-size: 2rem;
  }

  .featured-products-stacked .product__title-price s {
    color: #7E7C78;
  }

  .featured-products-stacked .product__title h1 {
    text-transform: none;
  }

  .featured-products-stacked__card .product__checkmarks {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin: 0;
    gap: 1rem;
  }

  .featured-products-stacked__card .product__checkmark + .product__checkmark {
    margin: 0;
  }

  .featured-products-stacked .product__included-products p + ul {
    margin-block-start: 0.8rem;
  }

  .featured-products-stacked .product__included-products p {
    margin: 0;
  }

  .featured-products-stacked .buy-buttons__wrapper {
    margin: 0;
  }

</style>

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
    {%- if section.settings.heading != blank -%}
      <h2 class="featured-products-stacked__header hmedium">{{ section.settings.heading |  escape }}</h2>
    {%- endif -%}
  <div class="featured-products-stacked page-width" id="FeaturedProductsStacked--{{ section.id }}">
    {%- for block in section.blocks -%}
      <div class="featured-products-stacked__card" id="FeaturedProductsStackedCard--{{ block.id }}">
        {%- assign product = block.settings.product -%}
        {%- if product != blank -%}
          {% assign image = product.featured_image %}
          {%- if block.settings.image != blank -%}
            {%- assign image = block.settings.image -%}
          {%- endif -%}

          <a href="{{ product.url | within: product }}" class="featured-products-stacked__image">
           {% render 'media-caption', block: block, location: '#FeaturedProductsStackedCard--' %}
            {{ image | image_url: width: 3200 | image_tag }}
          </a>
          <div class="featured-products-stacked__card-content">
            {% render 'okendo-reviews-product-rating-summary', product: product %}
            <div class="product__title product__title--with-price" {{ block.shopify_attributes }}>
              <h3 class="product__title-title h3">{{ product.title | escape }}</h3>
              <div class="product__title-price">
                <h4 class="h4">
                  {{ product.selected_or_first_available_variant.price | money_without_trailing_zeros }}
                </h4>
                {% if product.selected_or_first_available_variant.compare_at_price != blank
                  and product.selected_or_first_available_variant.price
                    < product.selected_or_first_available_variant.compare_at_price
                %}
                  <h4 class="h4">
                    <s>
                      {{-
                        product.selected_or_first_available_variant.compare_at_price
                        | money_without_trailing_zeros
                      -}}
                    </s>
                  </h4>
                {% endif %}
              </div>
            </div>
            {% if block.settings.included_products != blank %}
              <div class="product__included-products rte">
                {{ block.settings.included_products }}
              </div>
            {% endif %}
            {% if product.metafields.custom.checkmarks != blank %}
              <div class="product__checkmarks">
                {% for mark in product.metafields.custom.checkmarks.value %}
                  <div class="product__checkmark">{{ mark }}</div>
                {% endfor %}
              </div>
            {% endif %}
            {% if block.settings.button_label != blank %}
              {%- assign product_form_id = 'product-form-' | append: block.id -%}
              {%- render 'buy-buttons',
                block: block,
                product: block.settings.product,
                product_form_id: product_form_id,
                section_id: section.id,
                show_pickup_availability: true
              -%}
            {% endif %}
          </div>
        {%- endif -%}
      </div>
    {%- endfor -%}
  </div>
</div>

