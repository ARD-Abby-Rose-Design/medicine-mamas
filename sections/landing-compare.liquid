{%- liquid
  assign kicker = section.settings.kicker

  assign heading = section.settings.heading

  assign section_top = section.settings.section_top

  assign section_bottom = section.settings.section_bottom

  assign section_top_mobile = section.settings.section_top_mobile

  assign section_bottom_mobile = section.settings.section_bottom_mobile
-%}

<style>
  .landing-compare-table {
    max-width: 800px;
    margin-right: auto;
    margin-left: auto;

    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
  }

  .landing-compare-table > * {
    grid-area: 1 / 1;
    width: 100%;
    height: 100%;
  }

  .landing-compare-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr 1fr 1px;
    column-gap: var(--s2);
  }

  .landing-compare-brands {
    grid-column: 2 / span 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    column-gap: var(--s2);
  }

  @media (max-width: 960px) {
    .landing-compare-grid {
      column-gap: 5px;
    }

    .landing-compare-brands {
      column-gap: 5px;
    }
  }

  .landing-compare-brand-column {
    border-radius: 15px;
  }

  .landing-compare-brand {
    height: 160px;
    display: grid;
    place-items: center;
    padding: var(--s1);
  }

  .landing-compare-icon-logo {
    max-width: 100px;
    margin-right: auto;
    margin-left: auto;
  }

  @media (max-width: 960px) {
    .landing-compare-icon-logo {
      max-width: 56px;
    }
  }

  .landing-compare-icon-other {
    max-width: 86px;
    margin-right: auto;
    margin-left: auto;
  }

  @media (max-width: 960px) {
    .landing-compare-icon-other {
      max-width: 65px;
    }
  }

  .landing-compare-attribute-row {
    border-top: 1px solid #CECDCB;
  }

  .landing-compare-attribute-row > * {
    padding-block: var(--s2);
    padding-bottom: calc(var(--s2) - 3px);
  }

  .landing-compare-attributes {
    padding-top: 160px;
  }

  .landing-compare-attribute-value {
    display: grid;
    place-items: center;
  }

  .landing-compare-icon-true {
    width: 25px;
    height: 25px;
    border-radius: 50%;
    background-color: #000000;
    color: #FFFFFF;
    display: grid;
    place-items: center;
  }
</style>

<div class="landing-container top-{{ section_top }} small--top-{{ section_top_mobile }} bottom-{{ section_bottom }} small--bottom-{{ section_bottom_mobile }}">
  <div class="stack-1 center">
    <div class="landing-text landing-kicker">
      <p>{{ kicker }}</p>
    </div>
    <div class="landing-text">
      <h1 class="landing-heading">
        {{ heading }}
      </h1>
    </div>
  </div>

  <div class="stack-item-4 small--stack-item-2">
    <div class="landing-compare-table">
      <div class="landing-compare-grid">
        <div class="landing-compare-brands">
          <div class="landing-compare-brand-column" style="background-color: #FFFFFF;">
            <div class="landing-compare-brand">
              <div class="stack-1 small--stack--1 center">
                <div class="object-cover" style="max-width: 118px; margin-right: auto; margin-left: auto;">
                  {{ "landing-compare.png" | asset_url | img_tag }}
                </div>

                <div class="landing-visibility--desktop">
                  {%- render "icon-logo-small" -%}
                </div>

                <div class="landing-visibility--mobile">
                  {%- render "icon-logo-stacked" -%}
                </div>
              </div>
            </div>
          </div>

          <div class="landing-compare-brand-column" style="background-color: #E8E7E7;">
            <div class="landing-compare-brand">
              <div class="stack center">
                <div class="landing-compare-icon-other">
                  {%- render "icon-landing-compare-other" -%}
                </div>

                <div class="landing-text size-3 small--size-2">
                  <p>Other leading balms</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="landing-compare-attributes">
        {%- for n in (1..4) -%}
          <div class="landing-compare-grid landing-compare-attribute-row">
            <div class="landing-text size-3 small--size-2 inline-1">
              <p>Lorem ipsum dolor sit.</p>
            </div>

            <div class="landing-compare-attribute-value">
              <div class="landing-compare-icon-true">
                {%- render "icon-landing-checkmark" -%}
              </div>
            </div>

            <div class="center">
              {%- render "icon-landing-false" -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>

    {%- for block in section.blocks -%}
      {%- liquid
        assign image = block.settings.image

        assign image_url = image | image_url: width: 300

        assign attribute = block.settings.attribute

        assign value = block.settings.value
      -%}

    {%- endfor -%}
  </div>
</div>

