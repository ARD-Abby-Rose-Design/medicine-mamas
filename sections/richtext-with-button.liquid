            },
            {
              "value": "text-body-small",
              "label": "t:sections.all.paragraph_size.options__2.label"
            },
            {
              "value": "text-body-large",
              "label": "t:sections.all.paragraph_size.options__3.label"
            }
          ],
          "default": "text-body",
          "label": "t:sections.all.paragraph_size.label"
        }
      ]
    },
    {
      "type": "number",
      "name": "Number",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "default": "1",
          "label": "Number"
        },
        {
          "type": "range",
          "id": "margin_bottom",
          "label": "Margin bottom",
          "default": 0,
          "min": -100,
          "max": 100,
          "step": 2,
          "unit": "px"
        },
        {
          "type": "color",
          "id": "number_bg_color",
          "label": "Background color",
          "default": "#121212",
          "info": "Background color for the number"
        },
        {
          "type": "checkbox",
          "id": "show_desktop",
          "label": "Show on Desktop",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "show_mobile",
          "label": "Show on Mobile",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Richt text with button",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
